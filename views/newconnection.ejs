<!DOCTYPE html>
<html lang="en">
<% include partials/head.ejs %>

<body>
  <% include partials/header.ejs %>
  <% include partials/nav.ejs %>
 
  <main class="body-content-wrapper">
     
    <div class="container">

      <div class="col-sm-3">

        <h8>Start a new connection</h8>
        <% 
        var lists=List  %>
        <form id="contact-form" action="/newconnection.ejs" method="POST">
          <div class="form-group row">
            <label for="host" class="col-sm-2 col-form-label">Your name</label>
            <div class="col-sm-10">
             <input type="text" label="host" name="host" <%if(lists!==undefined){%> value="<%=lists.host %>"<%}%> class="form-control" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="topic" class="col-sm-2 col-form-label">Topic</label>
            <div class="col-sm-10">
              <input type="text" label="topic"  <%if(lists!==undefined){%>  value="<%=lists.connectiontopic %>" <%}%> class="form-control"  name="topic" required >
            </div>
          </div>
          <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" label="name",class="form-control"  <%if(lists!==undefined){%> value="<%=lists.connectionname %>"  <%}%>id="name" name="name" required>
            </div> 
          </div>
          <div class="form-group row">
            <label for="details" class="col-sm-2 col-form-label">Details</label>
            <div class="col-sm-10">
              <!-- <textarea class="form-control" ,label="details",id="details",name="details" <%if(lists!==undefined){%> value="<%=lists.details %>" <%}%> required> </textarea> -->
              <input type="text" class="form-control" ,label="details",id="details" name="details" <%if(lists!==undefined){%> value="<%=lists.details %>" <%}%> required>
            </div>
          </div>
          <div class="form-group row">
            <label for="where" class="col-sm-2 col-form-label">Where</label>
            <div class="col-sm-10">
              <input type="text" ,label="where",class="form-control"  id="where",<%if(lists!==undefined){%> value="<%=lists.location %>"   <%}%> name="where" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="when" class="col-sm-2 col-form-label">When</label>
            <div class="col-sm-10">
              <!-- <input type="date",label="when" class="form-control",name="when",id="when", <%if(lists!==undefined){%> value="<%=lists.date %>" <%}%> required> -->
              <input type="date",label="date" class="form-control" id="when" name="when"  <%if(lists!==undefined){%> value="<%=lists.date %>" <%}%> required>
            </div>
            <label for="start" class="col-sm-4 col-form-label">START TIME</label>
            <div class="col-sm-7">
              <input type="time",label="start" class="form-control"  id="start"  name="start" <%if(lists!==undefined){%>  
                <%var sto=lists.time.split(' to '); console.log(sto[0])%> value="<%=sto[0]%>" <%}%> required>
            </div>
              <label for="end" class="col-sm-4 col-form-label">END TIME</label>
              <div class="col-sm-8">
                <input type="time",label="end" class="form-control" <%if(lists!==undefined){%>  
                  <%var sto=lists.time.split(' to '); console.log(sto[1])%>value="<%=sto[1]%>" <%}%>  id="end" name="end" required>
              </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
                  <label for="UpdateConnection"><b></b></label>
                  <%if(lists!==undefined){%>
                <button type="submit" class="btn btn-dark btn-block" name="UpdateConnection" value="<%=lists.connectionid%>" formaction= "/newconnection.ejs" id="UpdateConnection">UPDATE CONNECTION</button>
              <%}%>
              <%if(lists===undefined){%>
              <button type="submit" class="btn btn-dark btn-block">
                <!-- <%if(lists!==undefined){%> Update Connection<%}%>  -->
                 Create Connection<%}%> 
              </button>
            </div>
          </div>
        </form>
      </div>

      <div class="col-lg-3"></div>
    </div>

  </main>
  <% include partials/footer.ejs %>

</body>

</html>